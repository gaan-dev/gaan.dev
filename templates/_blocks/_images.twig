{% if this %}
	{% set assets = this.imagesContent.all() %}
	{% if assets|length %}
	<div class="mb-4">
		<div class="content-block images">
			{% for asset in assets %}
			<div class="w-1/3 mx-auto p-2 rounded-lg">
				<div class="w-full pb-full relative">
	            	<img class="image w-full h-full absolute object-cover top-0" src="{{ asset.url }}" alt="{{ asset.filename }}">
				</div>
			</div>
			{% endfor %}
		</div>
		<div class="text-sm bg-gray-200 rounded py-2 px-2">{{ this.imageCaption }}</div>
	</div>
	{% endif %}
{% endif %}
